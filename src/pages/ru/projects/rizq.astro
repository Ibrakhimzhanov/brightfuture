---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';

const lang = 'ru';

const img1 = '/images/rizq/1.png';
const img2 = '/images/rizq/2.png';
const img3 = '/images/rizq/3.png';
const img4 = '/images/rizq/4.png';
---

<Layout title="Rizq - Bright Future">
  <Header lang={lang} />

  <main class="rizq-project">
    <section class="hero">
      <div class="hero__container">
        <h1 class="hero__title">Rizq</h1>
        <div class="hero__info">
          <div class="hero__meta">
            <p class="hero__company">Bright Future</p>
            <p class="hero__year">2024</p>
          </div>
          <div class="hero__about">
            <h2 class="hero__about-title">О проекте</h2>
            <p class="hero__about-text">
              Rizq — это не просто жилье, а место благословения, спокойствия и качественной жизни. Мы создаем надежную и комфортную среду для каждой семьи, объединяя современную архитектуру, тщательное планирование и удобную инфраструктуру.
            </p>
            <span class="hero__tag">3D Дизайн</span>
          </div>
        </div>
      </div>
    </section>

    <section class="gallery">
      <img src={img1} alt="Rizq Building View 1" class="gallery__img" />
      <img src={img2} alt="Rizq Building View 2" class="gallery__img" />
      <img src={img3} alt="Rizq Building View 3" class="gallery__img" />
      <img src={img4} alt="Rizq Building View 4" class="gallery__img" />
    </section>
  </main>

  <Footer lang={lang} />
</Layout>

<style>
  .rizq-project { --gray-light: #F6F6F6; --gray: #8C8C8C; --beige: #F2F1EC; }

  .hero { background: white; padding: 60px 0 80px; }
  .hero__container { max-width: 1000px; margin: 0 auto; padding: 0 60px; }
  .hero__title { font-size: clamp(64px, 10vw, 100px); font-weight: 500; color: #000; line-height: 1; text-align: center; margin-bottom: 60px; }
  .hero__info { display: grid; grid-template-columns: 200px 1fr; gap: 120px; }
  .hero__meta { display: flex; flex-direction: column; justify-content: space-between; min-height: 220px; }
  .hero__company, .hero__year { font-size: 32px; font-weight: 600; color: #000; }
  .hero__about { display: flex; flex-direction: column; gap: 16px; }
  .hero__about-title { font-size: 32px; font-weight: 600; color: #000; }
  .hero__about-text { font-size: 24px; font-weight: 400; color: var(--gray); line-height: 140%; max-width: 560px; }
  .hero__tag { display: inline-flex; padding: 14px 28px; background: var(--beige); border-radius: 50px; font-size: 24px; font-weight: 500; color: #000; width: fit-content; }

  .gallery { display: flex; flex-direction: column; }
  .gallery__img { width: 100%; height: auto; display: block; }

  @media (max-width: 1024px) {
    .hero__info { grid-template-columns: 1fr; gap: 40px; }
    .hero__meta { flex-direction: row; gap: 60px; min-height: auto; }
  }

  @media (max-width: 768px) {
    .hero { padding: 30px 0 50px; }
    .hero__container { padding: 0 24px; }
    .hero__meta { flex-direction: column; gap: 24px; }
    .hero__company, .hero__year, .hero__about-title { font-size: 24px; }
    .hero__about-text, .hero__tag { font-size: 18px; }
  }
</style>
