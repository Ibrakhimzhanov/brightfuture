---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

// Images
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;
const img1 = `${base}images/rizq/1.png`;
const img2 = `${base}images/rizq/2.png`;
const img3 = `${base}images/rizq/3.png`;
const img4 = `${base}images/rizq/4.png`;
---

<Layout title="Rizq - Bright Future">
  <Header />

  <main class="rizq-project">

    <!-- ==================== SECTION 1: HERO ==================== -->
    <section class="hero">
      <div class="hero__container">
        <!-- Title -->
        <h1 class="hero__title">Rizq</h1>

        <!-- Info grid -->
        <div class="hero__info">
          <!-- Left: Meta -->
          <div class="hero__meta">
            <p class="hero__company">Bright Future</p>
            <p class="hero__year">2024</p>
          </div>

          <!-- Right: About -->
          <div class="hero__about">
            <h2 class="hero__about-title">Loyiha haqida</h2>
            <p class="hero__about-text">
              Rizq bu shunchaki uy-joy emas, balki baraka, osoyishtalik va sifatli hayot makonidir. Biz zamonaviy arxitektura, puxta rejalashtirish va qulay infratuzilmani uyg'unlashtirgan holda, har bir oila uchun ishonchli va qulay yashash muhitini yaratamiz.
            </p>
            <span class="hero__tag">3D Dizayn</span>
          </div>
        </div>
      </div>
    </section>

    <!-- ==================== IMAGES ==================== -->
    <section class="gallery">
      <img src={img1} alt="Rizq Building View 1" class="gallery__img" />
      <img src={img2} alt="Rizq Building View 2" class="gallery__img" />
      <img src={img3} alt="Rizq Building View 3" class="gallery__img" />
      <img src={img4} alt="Rizq Building View 4" class="gallery__img" />
    </section>

  </main>

  <Footer />
</Layout>

<style>
  /* ========================================
     RIZQ PROJECT PAGE
     ======================================== */

  .rizq-project {
    --gray-light: #F6F6F6;
    --gray: #8C8C8C;
    --beige: #F2F1EC;
  }

  /* ==================== SECTION 1: HERO ==================== */
  .hero {
    background: white;
    padding: 60px 0 80px;
    
  }

  .hero__container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 60px;
  }

  .hero__title {
    font-family: 'Urbanist', sans-serif;
    font-size: clamp(64px, 10vw, 100px);
    font-weight: 500;
    font-style: normal;
    color: #000;
    line-height: 1;
    letter-spacing: -0.02em;
    text-align: center;
    margin-bottom: 60px;
  }

  .hero__info {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: 120px;
    width: 100%;
  }

  .hero__meta {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 220px;
  }

  .hero__company,
  .hero__year {
    font-family: 'Urbanist', sans-serif;
    font-size: 32px;
    font-weight: 600;
    color: #000;
  }

  .hero__about {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .hero__about-title {
    font-family: 'Urbanist', sans-serif;
    font-size: 32px;
    font-weight: 600;
    color: #000;
    margin-bottom: 8px;
  }

  .hero__about-text {
    font-family: 'Urbanist', sans-serif;
    font-size: 24px;
    font-weight: 400;
    color: var(--gray);
    line-height: 140%;
    max-width: 560px;
  }

  .hero__tag {
    display: inline-flex;
    align-items: center;
    padding: 14px 28px;
    background: var(--beige);
    border-radius: 50px;
    font-family: 'Urbanist', sans-serif;
    font-size: 24px;
    font-weight: 500;
    color: #000;
    width: fit-content;
    margin-top: 8px;
    transition: background 0.2s ease, transform 0.2s ease;
    transform: translateY(10px);
  }

  .hero__tag:hover {
    background: #E8E7E2;
    transform: translateY(-1px);
  }

  /* ==================== GALLERY ==================== */
  .gallery {
    display: flex;
    flex-direction: column;
  }

  .gallery__img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* ==================== RESPONSIVE ==================== */
  @media (max-width: 1024px) {
    .hero__container {
      padding: 0 40px;
    }

    .hero__info {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .hero__meta {
      flex-direction: row;
      gap: 60px;
      min-height: auto;
    }

    .hero__title {
      margin-bottom: 40px;
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding: 30px 0 50px;
    }

    .hero__container {
      padding: 0 24px;
    }

    .hero__title {
      margin-bottom: 32px;
    }

    .hero__info {
      gap: 32px;
    }

    .hero__meta {
      flex-direction: column;
      gap: 24px;
    }

    .hero__company,
    .hero__year {
      font-size: 24px;
    }

    .hero__about-title {
      font-size: 24px;
    }

    .hero__about-text {
      font-size: 18px;
    }

    .hero__tag {
      font-size: 18px;
    }
  }
</style>
