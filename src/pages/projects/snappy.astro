---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

// Images
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;
const laptopImg = `${base}images/snappy/laptop.png`;
const djImg = `${base}images/snappy/dj.png`;
const phoneAppImg = `${base}images/snappy/phone-app.png`;
const playLineImg = `${base}images/snappy/play-line.png`;
const pixorLogoImg = `${base}images/snappy/pixorlogo.png`;
const playFioletImg = `${base}images/snappy/playfiolet.png`;
const bidjekImg = `${base}images/snappy/bidjek.png`;
const visitcardImg = `${base}images/snappy/visitcard.png`;
const playandpeopleImg = `${base}images/snappy/playandpeople.png`;
const dashImg = `${base}images/snappy/dash.png`;
const leftdashImg = `${base}images/snappy/leftdash.png`;
const motivImg = `${base}images/snappy/motiv.png`;
---

<Layout title="Snappy - Bright Future">
  <Header />

  <main class="snappy-project">

    <!-- ==================== SECTION 1: HERO ==================== -->
    <section class="hero">
      <div class="hero__container">
        <!-- Title -->
        <h1 class="hero__title">Snappy</h1>

        <!-- Info grid -->
        <div class="hero__info">
          <!-- Left: Meta -->
          <div class="hero__meta">
            <p class="hero__company">Bright Future</p>
            <p class="hero__year">2024</p>
          </div>

          <!-- Right: About -->
          <div class="hero__about">
            <h2 class="hero__about-title">Loyiha haqida</h2>
            <p class="hero__about-text">
              Snappy jonli efirni toza, intuitiv va samaradorlikka asoslangan dizayn bilan qayta tasavvur qiladi. Biz har bir o'zaro ta'sirni — sozlashdan tortib, ishtirok etishgacha — soddalashtirdik, bu foydalanuvchilarga bir necha soniya ichida jonli efirga chiqish yoki translyatsiyalarni tomosha qilish imkonini berdi.
            </p>
            <span class="hero__tag">Website</span>
          </div>
        </div>
      </div>
    </section>

    <!-- ==================== SECTION 2: LAPTOP ==================== -->
    <section class="laptop-section">
      <img src={laptopImg} alt="Snappy Dashboard" class="laptop-section__img" />
    </section>

    <!-- ==================== SECTION 3: ABOUT ==================== -->
    <section class="about-section">
      <div class="about-section__container">
        <!-- Section label -->
        <div class="section-label">
          <span class="section-label__num">/01</span>
          <span class="section-label__text">Haqida</span>
        </div>

        <!-- Title -->
        <h2 class="about-section__title">
          Ijodkorlarga imkoniyat <span class="highlight">Yaratadigan</span> va ularning <br/> sa'y-harakatlarini mukofotlaydigan zamonaviy <br/> video striming platformasi
        </h2>

        <!-- Description -->
        <p class="about-section__desc">
          Ilova ijodkorlarga o'z kontentlaridan osongina<br>
          pul ishlash imkonini beradi
        </p>
      </div>
    </section>

    <!-- ==================== SECTION 4: IMAGES ==================== -->
    <section class="images-section">
      <div class="images-section__container">
        <!-- Left: DJ Image with play icon -->
        <div class="images-section__left">
          <img src={djImg} alt="DJ creating content" class="images-section__dj" />
        </div>
        <!-- Right: Phone App -->
        <div class="images-section__right">
          <img src={phoneAppImg} alt="Snappy mobile app" class="images-section__phone" />
        </div>
      </div>
    </section>

    <!-- ==================== SECTION 5: BRANDING ==================== -->
    <section class="branding-section">
      <div class="branding-section__container">
        <!-- Section label -->
        <div class="section-label">
          <span class="section-label__num">/02</span>
          <span class="section-label__text">Brending</span>
        </div>

        <!-- Logo image -->
        <div class="branding-section__image">
          <img src={playLineImg} alt="Snappy Logo" class="branding-section__img" />
        </div>
      </div>
    </section>

    <!-- ==================== SECTION 6: PIXOR ==================== -->
    <section class="pixor-section">
      <div class="pixor-section__container">
        <div class="pixor-section__content">
          <img src={pixorLogoImg} alt="Pixor Agency Logo" class="pixor-section__logo" />
          <p class="pixor-section__text">
            Logotip harakat va ijodkorlikni ifodalovchi universal "O'yin" ramzidan ilhomlangan. Uning suyuq, uchburchak shakli jonli kontentning dinamik oqimini ifodalaydi, binafsha gradient esa hissiyot, innovatsiya va raqamli impulsni ifodalaydi.
          </p>
        </div>
      </div>
    </section>

    <!-- ==================== SECTION 7: SHOWCASE ==================== -->
    <section class="showcase-section">
      <div class="showcase-section__container">
        <div class="showcase-section__left">
          <img src={playFioletImg} alt="Snappy Play Icon" class="showcase-section__play" />
        </div>
        <div class="showcase-section__right">
          <img src={bidjekImg} alt="Snappy Badge" class="showcase-section__badge" />
        </div>
      </div>
    </section>

    <!-- ==================== SECTION 8: VISITCARD ==================== -->
    <section class="visitcard-section">
      <div class="visitcard-section__container">
        <h2 class="visitcard-section__title">
          Ushbu o'ziga xoslik o'ynoqilik va professionallikni birlashtirib, ham <span class="highlight">strimerlar,</span> ham tomoshabinlar uchun jozibador.
        </h2>
        <div class="visitcard-section__image">
          <img src={visitcardImg} alt="Snappy Visit Card" class="visitcard-section__img" />
        </div>
      </div>
    </section>

    <!-- ==================== SECTION 9: PLAYANDPEOPLE ==================== -->
    <section class="playandpeople-section">
      <img src={playandpeopleImg} alt="Snappy Community" class="playandpeople-section__img" />
    </section>

    <!-- ==================== SECTION 10: USER RESEARCH ==================== -->
    <section class="userresearch-section">
      <div class="userresearch-section__container">
        <!-- Section label -->
        <div class="section-label">
          <span class="section-label__num">/03</span>
          <span class="section-label__text">Foydalanuvchi Tadqiqoti</span>
        </div>

        <!-- Cards container -->
        <div class="userresearch-cards">
          <!-- Left: User types image -->
          <div class="userresearch-cards__left">
            <img src={leftdashImg} alt="User types" class="userresearch-cards__img" />
          </div>

          <!-- Right: Subscription image (250px lower) -->
          <div class="userresearch-cards__right">
            <img src={dashImg} alt="Subscription chart" class="userresearch-cards__img" />
          </div>
        </div>
      </div>
    </section>

    <!-- ==================== SECTION 11: MOTIVATION ==================== -->
    <section class="motiv-section">
      <div class="motiv-section__container">
        <img src={motivImg} alt="Motivation" class="motiv-section__img" />
      </div>
    </section>


  </main>

  <Footer />
</Layout>

<style>
  /* ========================================
     SNAPPY PROJECT PAGE - PIXEL PERFECT
     ======================================== */

  .snappy-project {
    --purple-primary: #BE0ADC;
    --purple-secondary: #7B2CF5;
    --yellow: #FFD700;
    --green: #4ADE80;
    --gray-light: #F6F6F6;
    --gray: #8C8C8C;
    --beige: #F2F1EC;
  }

  /* ==================== SECTION 1: HERO ==================== */
  .hero {
    background: white;
    padding: 60px 0 80px;
  }

  .hero__container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 60px;
  }

  .hero__title {
    font-family: 'Urbanist', sans-serif;
    font-size: clamp(64px, 10vw, 100px);
    font-weight: 500;
    font-style: normal;
    color: #000;
    line-height: 1;
    letter-spacing: -0.02em;
    text-align: center;
    margin-bottom: 60px;
  }

  .hero__info {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: 120px;
    width: 100%;
  }

  .hero__meta {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 220px;
  }

  .hero__company,
  .hero__year {
    font-family: 'Urbanist', sans-serif;
    font-size: 32px;
    font-weight: 600;
    color: #000;
  }

  .hero__about {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .hero__about-title {
    font-family: 'Urbanist', sans-serif;
    font-size: 32px;
    font-weight: 600;
    color: #000;
    margin-bottom: 8px;
  }

  .hero__about-text {
    font-family: 'Urbanist', sans-serif;
    font-size: 24px;
    font-weight: 400;
    color: var(--gray);
    line-height: 140%;
    max-width: 560px;
  }

  .hero__tag {
    display: inline-flex;
    align-items: center;
    padding: 14px 28px;
    background: var(--beige);
    border-radius: 50px;
    font-family: 'Urbanist', sans-serif;
    font-size: 24px;
    font-weight: 500;
    color: #000;
    width: fit-content;
    margin-top: 8px;
    transition: background 0.2s ease, transform 0.2s ease;
     transform: translateY(10px);
  }

  .hero__tag:hover {
    background: #E8E7E2;
    transform: translateY(-1px);
  }

  /* ==================== SECTION 2: LAPTOP ==================== */
  .laptop-section {
    width: 100%;
  }

  .laptop-section__img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* ==================== SECTION 3: ABOUT ==================== */
  .about-section {
    background: white;
    padding: 100px 0;
  }

  .about-section__container {
    max-width: 1500px;
    margin: 0 auto;
    padding: 0 70px;
  }

  .section-label {
    display: flex;
    flex-direction: column;
    gap: 2px;
    margin-bottom: 40px;
  }

  .section-label__num {
    font-family: 'Helvetica Neue', 'Arial', sans-serif;
    font-size: 32px;
    font-weight: 400;
    color: var(--gray);
  }

  .section-label__text {
    font-family: 'Helvetica Neue', 'Arial', sans-serif;
    font-size: 32px;
    font-weight: 500;
    color: var(--gray);
  }

  .about-section__title {
    font-family: 'Helvetica Neue', 'Arial', sans-serif;
    font-size: 60px;
    font-weight: 500;
    font-style: normal;
    color: #000;
    line-height: 120%;
    letter-spacing: -1.2px;
    text-align: right;
  }

  @media (max-width: 1200px) {
    .about-section__title {
      font-size: 48px;
    }
  }

  @media (max-width: 768px) {
    .about-section__title {
      font-size: 32px;
      text-align: left;
    }
  }

  .highlight {
    color: #CC03ED;
  }

  .highlight--light {
    color: #D970E8;
  }

  .about-section__desc {
    font-family: 'Urbanist', sans-serif;
    font-size: 20px;
    font-weight: 400;
    color: var(--gray);
    line-height: 130%;
    letter-spacing: -0.2px;
  }

  /* ==================== SECTION 4: IMAGES ==================== */
  .images-section {
    padding: 80px 0;
  }

  .images-section__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 70px;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 40px;
  }

  .images-section__left {
    position: relative;
  }

  .images-section__dj {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    border-radius: 24px;
  }

  .images-section__play {
    position: absolute;
    bottom: 24px;
    left: 24px;
    width: 80px;
    height: 80px;
  }

  .images-section__play svg {
    width: 100%;
    height: 100%;
    filter: drop-shadow(0 4px 12px rgba(190, 10, 220, 0.4));
  }

  .images-section__right {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .images-section__phone {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  @media (max-width: 1400px) {
    .images-section__left,
    .images-section__right {
      width: calc(50% - 20px);
      height: auto;
      aspect-ratio: 651 / 766;
    }
  }

  @media (max-width: 1024px) {
    .images-section__container {
      flex-direction: column;
      gap: 32px;
    }

    .images-section__left,
    .images-section__right {
      width: 100%;
      max-width: 500px;
      height: auto;
      aspect-ratio: 651 / 766;
    }
  }

  @media (max-width: 768px) {
    .images-section {
      padding: 40px 0;
    }

    .images-section__container {
      padding: 0 24px;
    }

    .images-section__play {
      width: 60px;
      height: 60px;
      bottom: 16px;
      left: 16px;
    }
  }

  /* ==================== SECTION 5: BRANDING ==================== */
  .branding-section {
    background: white;
    padding: 100px 0;
  }

  .branding-section__container {
    max-width: 1500px;
    margin: 0 auto;
    padding: 0 70px;
  }

  .branding-section__image {
    display: flex;
    justify-content: end;
  }

  .branding-section__img {
    max-width: 100%;
    height: auto;
  }

  /* ==================== SECTION 6: PIXOR ==================== */
  .pixor-section {
    background: white;
    padding: 80px 0;
  }

  .pixor-section__container {
    max-width: 1500px;
    margin: 0 auto;
    padding: 0 70px;
    display: flex;
    justify-content: flex-end;
  }

  .pixor-section__content {
    max-width: 600px;
  }

  .pixor-section__logo {
    display: block;
    margin-bottom: 24px;
    height: 80px;
    width: auto;
  }

  .pixor-section__text {
    font-family: 'SF Pro Display', 'Urbanist', sans-serif;
    font-size: 20px;
    font-weight: 400;
    color: var(--gray);
    line-height: 1.6;
    align-self: stretch;
  }

  @media (max-width: 768px) {
    .pixor-section__container {
      justify-content: flex-start;
    }

    .pixor-section__content {
      max-width: 100%;
    }
  }

  /* ==================== SECTION 7: SHOWCASE ==================== */
  .showcase-section {
    padding: 0;
  }

  .showcase-section__container {
    max-width: 1500px;
    margin: 0 auto;
    padding: 0 70px;
    display: flex;
    gap: 40px;
    align-items: flex-start;
    justify-content: center;
  }

  .showcase-section__left {
    flex-shrink: 0;
    padding-top: 160px;
    padding-bottom: 80px;
  }

  .showcase-section__right {
    flex-shrink: 0;
  }

  .showcase-section__play {
    max-height: 600px;
    width: auto;
    border-radius: 24px;
  }

  .showcase-section__badge {
    max-height: 600px;
    width: auto;
    display: block;
  }

  @media (max-width: 1024px) {
    .showcase-section__container {
      flex-direction: column;
    }

    .showcase-section__play,
    .showcase-section__badge {
      max-height: 400px;
      max-width: 100%;
    }
  }

  /* ==================== SECTION 8: VISITCARD ==================== */
  .visitcard-section {
    background: white;
    padding: 100px 0;
  }

  .visitcard-section__container {
    max-width: 1500px;
    margin: 0 auto;
    padding: 0 70px;
  }

  .visitcard-section__title {
    font-family: 'SF Pro Display', 'Helvetica Neue', 'Arial', sans-serif;
    font-size: 70px;
    font-weight: 500;
    font-style: normal;
    color: #000;
    line-height: 120%;
    letter-spacing: -1.4px;
    max-width: 1348px;
    margin-bottom: 60px;
  }

  .visitcard-section__image {
    display: flex;
    justify-content: start;
  }

  .visitcard-section__img {
    max-width: 100%;
    height: auto;
  }

  @media (max-width: 1200px) {
    .visitcard-section__title {
      font-size: 48px;
    }
  }

  @media (max-width: 768px) {
    .visitcard-section__title {
      font-size: 32px;
    }
  }

  /* ==================== SECTION 9: PLAYANDPEOPLE ==================== */
  .playandpeople-section {
    background: white;
    padding: 300px 0;
    overflow: hidden;
  }

  .playandpeople-section__img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* ==================== SECTION 10: USER RESEARCH ==================== */
  .userresearch-section {
    padding: 0 0 250px 0;
  }

  .userresearch-section__container {
    max-width: 1500px;
    margin: 0 auto;
    padding: 0 70px;
  }

  .userresearch-card {
    display: inline-flex;
    min-width: 538px;
    padding: 50px 90px 68px 50px;
    flex-direction: column;
    align-items: flex-start;
    gap: 65px;
    border-radius: 58px;
    border: 1px solid #FAFAFA;
    background: #F0F0F0;
    box-sizing: border-box;
    overflow: visible;
  }

  .userresearch-card__header {
    display: flex;
    align-items: flex-start;
    gap: 12px;
  }

  .userresearch-card__icon {
    width: 24px;
    height: 24px;
    color: #000;
    flex-shrink: 0;
    margin-top: 2px;
  }

  .userresearch-card__title {
    font-family: 'Helvetica Neue', 'Arial', sans-serif;
    font-size: 32px;
    font-weight: 600;
    color: #000;
    margin-bottom: 4px;
  }

  .userresearch-card__subtitle {
    font-family: 'Helvetica Neue', 'Arial', sans-serif;
    font-size: 24px;
    font-weight: 400;
    opacity: 0.3;
    color: var(--gray);
  }

  .userresearch-card__stats {
    display: flex;
    flex-direction: column;
    gap: 32px;
    width: 100%;
  }

  .stat-row {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .stat-row__label {
    font-family: 'Urbanist', sans-serif;
    font-size: 14px;
    font-weight: 500;
    color: #000;
  }

  .stat-row__bar {
    position: relative;
    height: 8px;
    background: #E8E8E8;
    border-radius: 100px;
    width: 100%;
  }

  .stat-row__fill {
    position: relative;
    height: 100%;
    border-radius: 100px;
    transition: width 1s ease;
  }

  .stat-row__fill--green {
    background: #22C55E;
  }

  .stat-row__fill--purple {
    background: #CC03ED;
  }

  .stat-row__circle {
    position: absolute;
    top: 50%;
    right: 0;
    transform: translate(50%, -50%);
    width: 70px;
    height: 70px;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    border-radius: 50%;
  }

  .stat-row__circle-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .stat-row__circle-text {
    position: relative;
    z-index: 2;
    font-family: 'Urbanist', sans-serif;
    font-size: 18px;
    font-weight: 600;
    color: #000;
  }

  /* Cards container */
  .userresearch-cards {
    display: flex;
    gap: 60px;
    align-items: flex-start;
  }

  .userresearch-cards__left {
    flex-shrink: 0;
  }

  .userresearch-cards__right {
    flex-shrink: 0;
    margin-top: 650px;
  }

  .userresearch-cards__img {
    max-width: 100%;
    height: auto;
    display: block;
  }

  @media (max-width: 1024px) {
    .userresearch-cards {
      flex-direction: column;
      align-items: center;
    }

    .userresearch-cards__right {
      margin-top: 60px;
    }
  }

  /* ==================== SECTION 11: MOTIVATION ==================== */
  .motiv-section {
    background: white;
    padding: 100px 0;
  }

  .motiv-section__container {
    max-width: 1500px;
    margin: 0 auto;
    padding: 0 70px;
    display: flex;
    justify-content: center;
  }

  .motiv-section__img {
    max-width: 100%;
    height: auto;
    display: block;
  }

  /* ==================== SECTION 12: IDENTITY ==================== */
  .identity-section {
    background: linear-gradient(135deg, var(--purple-primary) 0%, var(--purple-secondary) 100%);
    padding: 100px 0;
    position: relative;
    overflow: hidden;
  }

  .identity-section__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 70px;
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 80px;
    align-items: center;
  }

  .identity-section__logo svg {
    width: 200px;
    height: 200px;
  }

  .identity-section__content {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  .identity-section__title {
    font-family: 'Urbanist', sans-serif;
    font-size: 36px;
    font-weight: 600;
    color: white;
    line-height: 1.4;
    max-width: 550px;
  }

  .identity-section__cards {
    display: flex;
    gap: 20px;
    position: relative;
  }

  .business-card {
    width: 280px;
    height: 160px;
    background: white;
    border-radius: 12px;
    padding: 20px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
  }

  .business-card--front {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    transform: rotate(-5deg);
    z-index: 2;
  }

  .business-card--back {
    position: absolute;
    left: 40px;
    top: -10px;
    transform: rotate(5deg);
    z-index: 1;
    background: #f5f5f5;
  }

  .business-card__logo svg {
    width: 40px;
    height: 40px;
  }

  .business-card__text {
    font-family: 'Urbanist', sans-serif;
    font-size: 18px;
    font-weight: 600;
    color: #000;
  }

  .identity-section__pencil {
    position: absolute;
    right: 100px;
    top: 50%;
    transform: translateY(-50%) rotate(45deg);
  }

  .pencil {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .pencil__body {
    width: 12px;
    height: 200px;
    background: linear-gradient(90deg, #DC2626 0%, #EF4444 50%, #DC2626 100%);
    border-radius: 2px 2px 0 0;
  }

  .pencil__tip {
    width: 0;
    height: 0;
    border-left: 6px solid transparent;
    border-right: 6px solid transparent;
    border-top: 20px solid #FCD34D;
  }

  .identity-section__avatars {
    position: absolute;
    bottom: 40px;
    left: 70px;
    right: 70px;
