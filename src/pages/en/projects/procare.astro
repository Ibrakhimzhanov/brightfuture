---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';

const lang = 'en';

const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;
const images = {
  procareLogo: `${base}images/procare/Procare_logo.png`,
  phoneHand: `${base}images/procare/phone-hand.png`,
  phoneList: `${base}images/procare/phone-list.png`,
  desktop: `${base}images/procare/desktop.png`,
  branding: `${base}images/procare/branding.png`,
  uiux: `${base}images/procare/uiux.png`,
  marketing: `${base}images/procare/marketing.png`,
  handPhone: `${base}images/procare/hand-phone.png`,
  handApp: `${base}images/procare/hand-app.png`,
  status: `${base}images/procare/status.png`,
  appLeft: `${base}images/procare/Procareapp-left.png`,
  appRight: `${base}images/procare/Procareapp-right.png`,
  laptop1: `${base}images/procare/laptop-1.png`,
  laptop2: `${base}images/procare/laptop-2.png`,
  logo: `${base}images/procare/logo.png`,
  webPlatform: `${base}images/procare/web-platworm.png`,
  appMarketing: `${base}images/procare/appmarketing.png`,
};
---

<Layout title="Procare - Bright Future">
  <Header lang={lang} />

  <main class="procare-project">

    <!-- ==================== SECTION 1: HERO ==================== -->
    <section class="hero">
      <div class="hero__container">
        <!-- Title -->
        <h1 class="hero__title">Procare</h1>

        <!-- Info grid -->
        <div class="hero__info">
          <!-- Left: Meta -->
          <div class="hero__meta">
            <p class="hero__company">Bright Future</p>
            <p class="hero__year">2025</p>
          </div>

          <!-- Right: About -->
          <div class="hero__about">
            <h2 class="hero__about-title">About the project</h2>
            <p class="hero__about-text">
              Procare is the largest smartphone service brand in Uzbekistan. The goal was to create a modern and reliable digital platform where users can quickly order repair services, receive status updates and see transparent pricing through a single intuitive interface.
            </p>
            <span class="hero__tag">Desktop</span>
          </div>
        </div>
      </div>
    </section>

    <!-- ==================== SECTION 2: HAQIDA ==================== -->
    <section class="haqida-section">
      <div class="haqida-section__container">
        <!-- Tag -->
        <span class="haqida-section__tag">About</span>

        <!-- Quote -->
        <blockquote class="haqida-section__quote">
          "<span class="text-dark">Procare</span> <span class="text-light">is the largest smartphone service</span> <span class="text-dark">brand in Uzbekistan,</span> <span class="text-light">providing fast and</span> <span class="text-dark">reliable repairs</span> <span class="text-light">for all major phone brands"</span>
        </blockquote>

        <!-- Info grid -->
        <div class="haqida-section__grid">
          <!-- Left: Project -->
          <div class="haqida-section__loyiha">
            <h3 class="haqida-section__title">Project</h3>
            <ul class="haqida-section__list">
              <li><span class="label">Client</span> <span class="dot">•</span> <span class="value">ProCare</span></li>
              <li><span class="label">Category</span> <span class="dot">•</span> <span class="value">Technical service / repair</span></li>
              <li><span class="label">Year</span> <span class="dot">•</span> <span class="value">2025</span></li>
            </ul>
          </div>

          <!-- Right: Overview -->
          <div class="haqida-section__info">
            <h3 class="haqida-section__title">Overview</h3>
            <p class="haqida-section__text">
              Procare is the largest smartphone service brand in Uzbekistan. The goal was to create a modern and reliable digital platform where users can quickly order repair services, receive status updates and see transparent pricing through a single intuitive interface.
            </p>
          </div>
        </div>

        <!-- Logo with ellipse -->
        <div class="haqida-section__logo">
          <div class="haqida-section__ellipse"></div>
          <img src={images.procareLogo} alt="Procare logo" class="haqida-section__logo-img" />
        </div>
      </div>
    </section>

    <!-- ==================== SECTION 3: MUAMMO ==================== -->
    <section class="muammo-section">
      <div class="muammo-section__container">
        <!-- Tag -->
        <span class="muammo-section__tag">Problem and Solution</span>

        <!-- Card: Problem -->
        <div class="muammo-card">
          <span class="muammo-card__label">Problem</span>
          <p class="muammo-card__text">
            Users faced difficulties finding reliable repair services. The existing process was time-consuming, lacked pricing transparency, and required multiple offline steps, causing customer distrust in repair quality and timing.
          </p>
        </div>

        <!-- Pagination -->
        <div class="muammo-section__pagination">
          <span class="pagination-btn pagination-btn--active">1</span>
          <span class="pagination-btn">2</span>
        </div>
      </div>
    </section>

    <!-- ==================== SECTION 4: YECHIM ==================== -->
    <section class="yechim-section">
      <div class="yechim-section__container">
        <!-- Card: Solution -->
        <div class="yechim-card">
          <span class="yechim-card__label">Solution</span>
          <p class="yechim-card__text">
            We created a unified platform that allows users to quickly order repair services, see transparent pricing, and track the process in real-time. With a streamlined interface and smart status updates, Procare now delivers fast, reliable, and stress-free service.
          </p>
        </div>

        <!-- Pagination -->
        <div class="yechim-section__pagination">
          <span class="pagination-btn">1</span>
          <span class="pagination-btn pagination-btn--active">2</span>
        </div>
      </div>
    </section>

    <!-- ==================== SECTION 5: JARAYON (PROCESS) ==================== -->
    <section class="jarayon-section">
      <div class="jarayon-section__container">
        <!-- Tag -->
        <span class="jarayon-section__tag">Process</span>

        <!-- Process Card -->
        <div class="jarayon-card">
          <div class="jarayon-card__number">01</div>
          <div class="jarayon-card__content">
            <div class="jarayon-card__header">
              <span class="jarayon-card__week">00 - 01 week</span>
              <h3 class="jarayon-card__title">Discovery</h3>
            </div>
            <div class="jarayon-card__dots">
              <span class="dot dot--active"></span>
              <span class="dot"></span>
              <span class="dot"></span>
              <span class="dot"></span>
            </div>
            <ul class="jarayon-card__list">
              <li>Briefing with the client team</li>
              <li>Research on customer needs and market competitors</li>
              <li>Identifying service pain points and improvement opportunities</li>
            </ul>
          </div>
        </div>

        <!-- Navigation Icons -->
        <div class="jarayon-nav">
          <button class="jarayon-nav__btn jarayon-nav__btn--active">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"></circle>
              <path d="m21 21-4.35-4.35"></path>
            </svg>
          </button>
          <button class="jarayon-nav__btn">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
          </button>
          <button class="jarayon-nav__btn">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="4" y="2" width="16" height="20" rx="2" ry="2"></rect>
              <path d="M9 22v-4h6v4"></path>
              <path d="M8 6h.01"></path>
              <path d="M16 6h.01"></path>
              <path d="M12 6h.01"></path>
              <path d="M12 10h.01"></path>
              <path d="M12 14h.01"></path>
              <path d="M16 10h.01"></path>
              <path d="M16 14h.01"></path>
              <path d="M8 10h.01"></path>
              <path d="M8 14h.01"></path>
            </svg>
          </button>
          <button class="jarayon-nav__btn">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="5" y="2" width="14" height="20" rx="2" ry="2"></rect>
              <path d="M12 18h.01"></path>
            </svg>
          </button>
        </div>
      </div>
    </section>

    <!-- ==================== SECTION 5B: JARAYON STEP 02 ==================== -->
    <section class="jarayon-step-02">
      <div class="jarayon-step-02__container">
        <!-- Content Left -->
        <div class="jarayon-step-02__content">
          <div class="jarayon-step-02__header">
            <span class="jarayon-step-02__week">01 - 02 week</span>
            <h3 class="jarayon-step-02__title">UX Structure</h3>
          </div>
          <div class="jarayon-step-02__dots">
            <span class="dot dot--active"></span>
            <span class="dot dot--active"></span>
            <span class="dot"></span>
            <span class="dot"></span>
          </div>
          <ul class="jarayon-step-02__list">
            <li>Mapping user journey (booking → tracking → delivery)</li>
            <li>Building wireframes for each service stage</li>
            <li>Validating repair flow clarity with real users</li>
          </ul>
        </div>

        <!-- Number Right -->
        <div class="jarayon-step-02__number">02</div>

        <!-- Navigation Icons -->
        <div class="jarayon-step-02__nav">
          <button class="jarayon-nav__btn">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"></circle>
              <path d="m21 21-4.35-4.35"></path>
            </svg>
          </button>
          <button class="jarayon-nav__btn jarayon-nav__btn--active">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
          </button>
          <button class="jarayon-nav__btn">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="4" y="2" width="16" height="20" rx="2" ry="2"></rect>
              <path d="M9 22v-4h6v4"></path>
              <path d="M8 6h.01"></path>
              <path d="M16 6h.01"></path>
              <path d="M12 6h.01"></path>
              <path d="M12 10h.01"></path>
              <path d="M12 14h.01"></path>
              <path d="M16 10h.01"></path>
              <path d="M16 14h.01"></path>
              <path d="M8 10h.01"></path>
              <path d="M8 14h.01"></path>
            </svg>
          </button>
          <button class="jarayon-nav__btn">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="5" y="2" width="14" height="20" rx="2" ry="2"></rect>
              <path d="M12 18h.01"></path>
            </svg>
          </button>
        </div>
      </div>
    </section>

    <!-- ==================== SECTION 5C: TIPOGRAFIYA VA RANGLAR ==================== -->
    <section class="typography-section">
      <div class="typography-section__container">
        <!-- Tag -->
        <span class="typography-section__tag">Typography and Colors</span>

        <!-- Description -->
        <p class="typography-section__desc">
          Geologica is a modern sans-serif font with clean geometry and humanist proportions.
        </p>

        <!-- Font Name -->
        <div class="typography-section__font">
          <h2 class="typography-section__font-name">Geologica</h2>
          <span class="typography-section__font-label">//Font</span>
        </div>

        <!-- Font Weights -->
        <div class="typography-section__weights">
          <div class="weight-item">
            <span class="weight-item__label">Light</span>
            <div class="weight-item__circle">L</div>
          </div>
          <div class="weight-line"></div>
          <div class="weight-item">
            <span class="weight-item__label">Regular</span>
            <div class="weight-item__circle">R</div>
          </div>
          <div class="weight-line"></div>
          <div class="weight-item">
            <span class="weight-item__label">Medium</span>
            <div class="weight-item__circle">M</div>
          </div>
          <div class="weight-line"></div>
          <div class="weight-item">
            <span class="weight-item__label">SemiBold</span>
            <div class="weight-item__circle">S</div>
          </div>
          <div class="weight-line"></div>
          <div class="weight-item">
            <span class="weight-item__label">Bold</span>
            <div class="weight-item__circle">B</div>
          </div>
        </div>
      </div>
    </section>

    <!-- ==================== SECTION 5D: COLOR PALETTE ==================== -->
    <section class="colors-section">
      <div class="colors-section__container">
        <!-- Circles with gradient border -->
        <div class="colors-circles">
          <div class="colors-circle colors-circle--1"></div>
          <div class="colors-circle colors-circle--2"></div>
          <div class="colors-circle colors-circle--3"></div>
          <div class="colors-circle colors-circle--4"></div>

          <!-- Center Logo -->
          <div class="colors-center">
            <img src={images.procareLogo} alt="Procare logo" class="colors-center__logo" />
          </div>

          <!-- Blue color point -->
          <div class="color-point color-point--blue">
            <div class="color-point__dot"></div>
            <div class="color-point__info">
              <span class="color-point__hex">• HEX #00B4F3</span>
              <span class="color-point__rgb">RGB 0, 180, 243</span>
            </div>
          </div>

          <!-- Red color point -->
          <div class="color-point color-point--red">
            <div class="color-point__dot"></div>
            <div class="color-point__info">
              <span class="color-point__hex">• HEX #EF4444</span>
              <span class="color-point__rgb">RGB 239, 68, 68</span>
            </div>
          </div>

          <!-- Black color point -->
          <div class="color-point color-point--black">
            <div class="color-point__dot"></div>
            <div class="color-point__info">
              <span class="color-point__hex">• HEX #000000</span>
              <span class="color-point__rgb">RGB 0, 0, 0</span>
            </div>
          </div>
        </div>

        <!-- Background info -->
        <div class="colors-background">
          <span class="colors-background__title">Background</span>
          <span class="colors-background__hex">• HEX #FFFFFF</span>
          <span class="colors-background__rgb">RGB 255, 255, 255</span>
        </div>
      </div>
    </section>

    <!-- ==================== SECTION 6: MOBIL ILOVA ==================== -->
    <section class="mobil-ilova-section">
      <div class="mobil-ilova-section__container">
        <!-- Tag -->
        <span class="mobil-ilova-section__tag">Mobile App</span>

        <!-- Content -->
        <div class="mobil-ilova-section__content">
          <!-- Image -->
          <div class="mobil-ilova-section__image">
            <img src={images.handPhone} alt="Procare mobile app" class="mobil-ilova-section__img" />
          </div>

          <!-- Text -->
          <p class="mobil-ilova-section__text">
            Procare's mobile version is designed to simplify repair booking and service tracking.
          </p>
        </div>
      </div>
    </section>

    <!-- ==================== SECTION 7: STATUS APP ==================== -->
    <section class="status-app-section">
      <div class="status-app-section__container">
        <!-- Left: Status UI -->
        <div class="status-app-section__ui">
          <img src={images.status} alt="Procare status interface" class="status-app-section__ui-img" />
        </div>

        <!-- Right: Hand with phone -->
        <div class="status-app-section__phone">
          <img src={images.handApp} alt="Procare app on phone" class="status-app-section__phone-img" />
        </div>
      </div>
    </section>

    <!-- ==================== SECTION 8: APP SCREENS ==================== -->
    <section class="app-screens-section">
      <div class="app-screens-section__container">
        <div class="app-screens-section__screens">
          <div class="app-screens-section__left">
            <img src={images.appLeft} alt="Procare app empty state" class="app-screens-section__img" />
          </div>
          <div class="app-screens-section__divider"></div>
          <div class="app-screens-section__right">
            <img src={images.appRight} alt="Procare app chart" class="app-screens-section__img" />
          </div>
        </div>
      </div>
    </section>

    <!-- ==================== SECTION 9: DESKTOP ==================== -->
    <section class="desktop-section">
      <div class="desktop-section__container">
        <!-- Tag -->
        <span class="desktop-section__tag">Desktop</span>

        <!-- Laptop 1 -->
        <div class="desktop-section__laptop1">
          <img src={images.laptop1} alt="Procare desktop dashboard" class="desktop-section__img1" />
        </div>

        <!-- Laptop 2 -->
        <div class="desktop-section__laptop2">
          <img src={images.laptop2} alt="Procare desktop analytics" class="desktop-section__img2" />
        </div>

        <!-- Text -->
        <p class="desktop-section__text">
          Procare's desktop version provides administrators and service managers with full control over operations.
        </p>
      </div>
    </section>

    <!-- ==================== SECTION 10: NATIJA ==================== -->
    <section class="natija-section">
      <div class="natija-section__container">
        <!-- Tag -->
        <span class="natija-section__tag">Results</span>

        <!-- Description -->
        <p class="natija-section__desc">
          Thanks to the new digital platform and redesigned service flow, our customers can now order repairs faster, track progress in real-time, and trust the process from start to finish.
        </p>

        <!-- Stats Cards -->
        <div class="natija-section__stats">
          <!-- Card 1 -->
          <div class="natija-card natija-card--red">
            <span class="natija-card__number">4</span>
            <span class="natija-card__label">Sprints for the project</span>
          </div>

          <!-- Card 2 -->
          <div class="natija-card natija-card--yellow">
            <span class="natija-card__number">5</span>
            <span class="natija-card__label">Months of work</span>
          </div>

          <!-- Card 3 -->
          <div class="natija-card natija-card--blue natija-card--wide">
            <span class="natija-card__title">Efficiency Boost</span>
            <span class="natija-card__percent">+40%</span>
            <span class="natija-card__subtitle">Customer satisfaction improvement</span>
            <div class="natija-card__progress">
              <div class="natija-card__progress-bar"></div>
            </div>
          </div>
        </div>

        <!-- Bottom Text -->
        <p class="natija-section__text">
          Clear, consistent and adaptive — Procare's visual identity maintains its clarity and reliability across all formats: from digital interfaces to social media and real-world branding.
        </p>
      </div>
    </section>

    <!-- ==================== SECTION 11: SERVICES ==================== -->
    <section class="services-section">
      <div class="services-section__container">
        <!-- Logo above main card -->
        <div class="services-section__logo">
          <img src={images.logo} alt="Procare logo" class="services-section__logo-img" />
        </div>

        <!-- Cards -->
        <div class="services-section__cards">
          <div class="services-card">
            <span class="services-card__title">Branding</span>
          </div>
          <div class="services-card">
            <span class="services-card__title">Mobile App</span>
          </div>
          <div class="services-card services-card--main">
            <img src={images.webPlatform} alt="Web platform" class="services-card__img" />
          </div>
          <div class="services-card">
            <span class="services-card__title">Social Media</span>
          </div>
        </div>
      </div>
    </section>

    <!-- ==================== CTA SECTION ==================== -->
    <section class="cta-section">
      <img src={images.appMarketing} alt="Procare app marketing" class="cta-section__img" />
    </section>

  </main>

  <Footer lang={lang} />
</Layout>

<style>
  /* ========================================
     PROCARE PROJECT PAGE
     ======================================== */

  .procare-project {
    --blue-primary: #4A90D9;
    --blue-light: #E8F4FD;
    --gray-light: #F6F6F6;
    --gray: #8C8C8C;
    --beige: #F2F1EC;
  }

  /* ==================== SECTION 1: HERO ==================== */
  .hero {
    background: white;
    padding: 60px 0 80px;
  }

  .hero__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 60px;
  }

  .hero__title {
    font-family: 'Urbanist', sans-serif;
    font-size: 100px;
    font-weight: 500;
    color: #000;
    line-height: normal;
    text-align: center;
    margin-bottom: 60px;
  }

  .hero__info {
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: 80px;
    width: 100%;
  }

  .hero__meta {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 280px;
  }

  .hero__company,
  .hero__year {
    font-family: 'Urbanist', sans-serif;
    font-size: 32px;
    font-weight: 600;
    color: #000;
    line-height: 140%;
  }

  .hero__about {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .hero__about-title {
    font-family: 'Urbanist', sans-serif;
    font-size: 32px;
    font-weight: 600;
    color: #000;
    line-height: 140%;
  }

  .hero__about-text {
    font-family: 'Geologica', sans-serif;
    font-size: 18px;
    font-weight: 200;
    color: #9CA3AF;
    line-height: 160%;
    max-width: 560px;
  }

  .hero__tag {
    display: inline-flex;
    align-items: center;
    padding: 14px 28px;
    background: var(--beige);
    border-radius: 50px;
    font-family: 'Urbanist', sans-serif;
    font-size: 24px;
    font-weight: 500;
    color: #000;
    line-height: normal;
    width: fit-content;
    margin-top: 16px;
  }

  /* ==================== SECTION 2: HAQIDA ==================== */
  .haqida-section {
    background: white;
    padding: 80px 0 100px;
    overflow: visible;
  }

  .haqida-section__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 60px;
    overflow: visible;
  }

  .haqida-section__tag {
    display: inline-block;
    padding: 12px 24px;
    background: #F3F4F6;
    border-radius: 50px;
    font-family: 'Urbanist', sans-serif;
    font-size: 16px;
    font-weight: 500;
    color: #000;
    margin-bottom: 40px;
  }

  .haqida-section__quote {
    font-family: 'Geologica', sans-serif;
    font-size: 42px;
    font-weight: 300;
    font-style: normal;
    line-height: 160%;
    margin: 0 0 80px 0;
    max-width: 1000px;
    color: #000;
  }

  .haqida-section__quote .text-dark {
    color: #000;
    font-weight: 300;
  }

  .haqida-section__quote .text-light {
    color: #9CA3AF;
    font-weight: 300;
  }

  .haqida-section__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
  }

  .haqida-section__title {
    font-family: 'Geologica', sans-serif;
    font-size: 24px;
    font-weight: 400;
    font-style: normal;
    color: #000;
    line-height: 160%;
    margin-bottom: 24px;
  }

  .haqida-section__list {
