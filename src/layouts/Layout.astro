---
import '@fontsource/urbanist/400.css';
import '@fontsource/urbanist/400-italic.css';
import '@fontsource/urbanist/500.css';
import '@fontsource/urbanist/500-italic.css';
import '@fontsource/urbanist/600.css';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Bright Future - Design Agency',
  description = 'Vizual identifikatsiya va innovatsiya agentligi. UX/UI dizayn, brending, 3D dizayn va web development.'
} = Astro.props;

const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;
---

<!DOCTYPE html>
<html lang="uz">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <link rel="icon" type="image/x-icon" href={`${base}logo.ico`} />
  <title>{title}</title>
  
  <!-- Preconnect to Google Fonts for performance -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

  <!-- Geologica font -->
  <link href="https://fonts.googleapis.com/css2?family=Geologica:wght@100;200;300;400;500;600;700&display=swap" rel="stylesheet" />

  <!-- Helvetica Neue fallback stack -->
  <style>
    @font-face {
      font-family: 'Helvetica Neue';
      src: local('Helvetica Neue Medium'), local('HelveticaNeue-Medium');
      font-weight: 500;
      font-style: normal;
    }
  </style>
</head>
<body class="font-urbanist antialiased">
  <slot />
</body>
</html>
