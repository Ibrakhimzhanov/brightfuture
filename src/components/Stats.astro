---
import StatCard from './ui/StatCard.astro';
import { useTranslations, type Lang } from '../i18n';

interface Props {
  lang?: Lang;
}

const { lang = 'uz' } = Astro.props;
const t = useTranslations(lang);

const stats = [
  { number: t('stats.stat1.number'), description: t('stats.stat1.description') },
  { number: t('stats.stat2.number'), description: t('stats.stat2.description') },
  { number: t('stats.stat3.number'), description: t('stats.stat3.description') },
  { number: t('stats.stat4.number'), description: t('stats.stat4.description') },
];
---

<section class="py-12 lg:py-16 bg-white" id="stats">
  <div class="container-bf">

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {stats.map((stat, index) => (
        <StatCard
          number={stat.number}
          description={stat.description}
          delay={index * 100}
        />
      ))}
    </div>

  </div>
</section>

<style>
  /* Trigger animations when section is in view */
  section {
    overflow: hidden;
  }
</style>
