---
interface Props {
  number: string;
  description: string;
  delay?: number;
}

const { number, description, delay = 0 } = Astro.props;
---

<div 
  class="stat-card bg-bf-gray-light rounded-card p-6 flex flex-col justify-between h-[237px] overflow-hidden group"
  style={`animation-delay: ${delay}ms`}
>
  <!-- Number -->
  <div class="relative">
    <span class="text-[3.75rem] font-semibold leading-none text-bf-black transition-transform duration-500 group-hover:scale-105 inline-block">
      {number}
    </span>
    
  </div>
  
  <!-- Description -->
  <p class="text-small font-normal text-bf-black leading-relaxed">
    {description}
  </p>
</div>

<style>
  .stat-card {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeSlideUp 0.6s ease-out forwards;
  }

  @keyframes fadeSlideUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Hover lift effect */
  .stat-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .stat-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.06);
  }
</style>
