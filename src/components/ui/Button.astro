---
interface Props {
  text: string;
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline';
  size?: 'sm' | 'md' | 'lg';
  showArrow?: boolean;
  class?: string;
}

const {
  text,
  href = '#',
  variant = 'primary',
  size = 'md',
  showArrow = true,
  class: className = ''
} = Astro.props;

const baseStyles = 'inline-flex items-center gap-0 font-medium transition-all duration-250 ease-out group';

const variants = {
  primary: 'text-white',
  secondary: 'text-bf-black',
  outline: 'border border-bf-gray-30 text-bf-black hover:border-bf-primary hover:text-bf-primary bg-transparent',
};

const sizes = {
  sm: 'h-9 text-sm',
  md: 'h-9 text-small',
  lg: 'h-[72px] text-body-lg px-2',
};
---

<a
  href={href}
  class:list={[baseStyles, variants[variant], sizes[size], className]}
>
  <!-- Text pill -->
  <span class:list={[
    'rounded-button px-5 flex items-center justify-center h-full',
    variant === 'primary' && 'bg-bf-primary group-hover:bg-bf-primary-hover',
    variant === 'secondary' && 'bg-bf-beige group-hover:bg-bf-gray-light',
    variant === 'outline' && 'border-r-0',
  ]}>
    {text}
  </span>

  <!-- Arrow circle -->
  {showArrow && (
    <span class:list={[
      'size-9 rounded-full flex items-center justify-center transition-transform duration-250',
      'group-hover:translate-x-0.5',
      variant === 'primary' && 'bg-bf-primary group-hover:bg-bf-primary-hover',
      variant === 'secondary' && 'bg-bf-beige group-hover:bg-bf-gray-light',
      size === 'lg' && 'size-14',
    ]}>
      <svg
        width="16"
        height="16"
        viewBox="0 0 16 16"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        class="transition-transform duration-250 group-hover:translate-x-0.5"
      >
        <path
          d="M3.33334 8H12.6667M12.6667 8L8.00001 3.33334M12.6667 8L8.00001 12.6667"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
        />
      </svg>
    </span>
  )}
</a>

<style>
  a {
    text-decoration: none;
  }
</style>
